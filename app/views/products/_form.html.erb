<%= form_with(model: product, local: true, class:"js-form") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name , class:'form-control'%>
  </div>

  <div class="field">
    <%= form.label :money %>
    <%= form.text_field :money , class:'form-control'%>
  </div>

  <div class="field">
    <%= form.label :start_at %>
    <%= form.time_select :start_at , class:'form-control'%>
  </div>

  <div class="field">
    <%= form.label :end_at %>
    <%= form.time_select :end_at , class:'form-control'%>
  </div>

  <div class="field form-group">
    <%= form.label :currency %>
    <select name="product[currency]" class="js-currency-select form-control">
      <option value="NTD">NTD</option>
      <option value="USD">USD</option>
      <option value="HKD">HKD</option>
    </select>
  </div>

  <div class="field">
    <%= form.label :tag_list %>
    <select name="product[tag_list][]" multiple= 'true' , class='js-tag-select form-control'>
      <%= options_for_select(product.tag_list) %>
    </select>
  </div>

  <div class="actions">
    <%= form.submit class:"js-submit-btn btn btn-outline-secondary"%>
  </div>
<% end %>
